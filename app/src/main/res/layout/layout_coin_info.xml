<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".main.MainActivity">

    <data>

        <import type="com.example.kobit.utils.extension.FontStyle"/>

        <variable
            name="data"
            type="com.example.kobit.model.CoinDataModel.Data" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_gray_radius6"
        android:orientation="horizontal">

        <!--  즐겨찾기 여부   -->
        <ImageView
            android:id="@+id/is_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <!--  가상자산명   -->
        <TextView
            setText="@{data.title}"
            setFontStyle="@{FontStyle.BOLD.type}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black" />

        <!--  현재가   -->
        <TextView
            setText="@{data.last}"
            setFontStyle="@{FontStyle.BOLD.type}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <!--  변동률   -->
            <TextView
                setTextWithPercent="@{data.changePercent}"
                setColorByValue="@{data.changePercent}"
                setFontStyle="@{FontStyle.BOLD.type}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black" />

            <!--  변동가격   -->
            <TextView
                setText="@{data.change}"
                setFontStyle="@{FontStyle.BOLD.type}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black" />
        </LinearLayout>

        <!--  거래대금   -->
        <TextView
            setText="@{data.volume}"
            setFontStyle="@{FontStyle.BOLD.type}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:textColor="@color/black" />

    </LinearLayout>
</layout>
